<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unknow"
        android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:textStyle="bold|italic"
        android:textColor="@android:color/background_dark" />

    <Button
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:text="Play"
        android:id="@+id/play_btn"
        android:textSize="@dimen/abc_action_bar_overflow_padding_end_material"
        android:background="@color/bleu"
        android:textColor="@android:color/white"
        android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material" />

    <Button
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:text="+"
        android:id="@+id/given_btn"
        android:background="@color/vert"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:layout_margin="@dimen/abc_action_bar_subtitle_bottom_margin_material"
        android:textStyle="bold" />

</LinearLayout>